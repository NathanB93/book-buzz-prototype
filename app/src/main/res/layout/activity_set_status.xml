<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#82A7FF">

    <RadioGroup
        android:id="@+id/status_radio_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <RadioButton
            android:id="@+id/radio_read"
            android:layout_width="120dp"
            android:layout_height="36dp"
            android:checked="true"
            android:onClick="checkButton"
            android:text="Read" />

        <RadioButton
            android:id="@+id/radio_reading"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:onClick="checkButton"
            android:text="Reading" />

        <RadioButton
            android:id="@+id/radio_want"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="checkButton"
            android:text="Want to read" />
    </RadioGroup>

    <TextView
        android:id="@+id/status_selection_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/status_radio_group"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="Book status:"
        android:textSize="20sp" />

    <Button
        android:id="@+id/setStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/status_selection_txt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="Set status" />

</RelativeLayout>