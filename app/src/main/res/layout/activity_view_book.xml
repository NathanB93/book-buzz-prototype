<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#82A7FF">

    <ImageView
        android:id="@+id/bookPicture"
        android:layout_width="207dp"
        android:layout_height="196dp"
        android:layout_marginStart="70dp"
        android:layout_marginLeft="70dp"
        android:layout_marginBottom="28dp"
        app:layout_constraintBottom_toTopOf="@+id/title_txt"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/restaurant_at_the_end_of_the_universe" />

    <TextView
        android:id="@+id/title_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="96dp"
        android:layout_marginLeft="96dp"
        android:text="@string/title_label_vb"
        app:layout_constraintBaseline_toBaselineOf="@+id/title_txt_vb"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/author_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="@string/author_label_vb"
        app:layout_constraintEnd_toStartOf="@+id/author_txt_vb"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/title_txt"
        app:layout_constraintTop_toBottomOf="@+id/title_txt"
        tools:text="Author:" />

    <TextView
        android:id="@+id/pages_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="@string/pages_label_vb"
        app:layout_constraintBottom_toBottomOf="@+id/pages_txt_vb"
        app:layout_constraintEnd_toStartOf="@+id/pages_txt_vb"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/author_txt"
        app:layout_constraintTop_toBottomOf="@+id/author_txt" />

    <TextView
        android:id="@+id/year_label"
        android:layout_width="wrap_content"
        android:layout_height="23dp"
        android:text="@string/published_label_vb"
        app:layout_constraintBaseline_toBaselineOf="@+id/year_txt_vb"
        app:layout_constraintEnd_toStartOf="@+id/year_txt_vb"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/pages_txt" />

    <TextView
        android:id="@+id/title_txt_vb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.423"
        app:layout_constraintStart_toEndOf="@+id/title_txt"
        app:layout_constraintTop_toBottomOf="@+id/bookPicture" />

    <TextView
        android:id="@+id/author_txt_vb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="@+id/title_txt_vb"
        app:layout_constraintStart_toStartOf="@+id/title_txt_vb"
        app:layout_constraintTop_toBottomOf="@+id/title_txt_vb" />

    <TextView
        android:id="@+id/pages_txt_vb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="@+id/author_txt_vb"
        app:layout_constraintStart_toStartOf="@+id/author_txt_vb"
        app:layout_constraintTop_toBottomOf="@+id/author_txt_vb" />

    <TextView
        android:id="@+id/year_txt_vb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="@+id/pages_txt_vb"
        app:layout_constraintStart_toStartOf="@+id/pages_txt_vb"
        app:layout_constraintTop_toBottomOf="@+id/pages_txt_vb" />

    <TextView
        android:id="@+id/status_label"
        android:layout_width="wrap_content"
        android:layout_height="19dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="116dp"
        android:layout_marginRight="116dp"
        android:text="@string/status_label_vb"
        app:layout_constraintBottom_toBottomOf="@+id/isbn_txt_vb"
        app:layout_constraintEnd_toStartOf="@+id/status_txt_vb"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/year_label"
        app:layout_constraintTop_toBottomOf="@+id/year_label"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/bookmark_btn"
        android:layout_width="110dp"
        android:layout_height="66dp"
        android:layout_marginStart="96dp"
        android:layout_marginLeft="96dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:text="Bookmark"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/isbn_txt"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/status_txt_vb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="96dp"
        android:layout_marginRight="96dp"
        app:layout_constraintEnd_toEndOf="@+id/year_txt_vb"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/year_txt_vb"
        app:layout_constraintTop_toBottomOf="@+id/year_txt_vb" />

    <TextView
        android:id="@+id/isbn_txt_vb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="@+id/status_txt_vb"
        app:layout_constraintStart_toStartOf="@+id/status_txt_vb"
        app:layout_constraintTop_toBottomOf="@+id/status_txt_vb" />

    <TextView
        android:id="@+id/isbn_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="@string/isbn_label_vb"
        app:layout_constraintBottom_toBottomOf="@+id/isbn_txt_vb"
        app:layout_constraintEnd_toStartOf="@+id/isbn_txt_vb"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/status_label"
        app:layout_constraintTop_toBottomOf="@+id/status_label"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/editBookmark"
        android:layout_width="57dp"
        android:layout_height="42dp"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintBaseline_toBaselineOf="@+id/bookmark_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.284"
        app:layout_constraintStart_toEndOf="@+id/bookmark_btn" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Page No."
        app:layout_constraintEnd_toEndOf="@+id/editBookmark"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/editBookmark"
        app:layout_constraintTop_toBottomOf="@+id/editBookmark" />

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="0dp"
        android:layout_height="87dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <Button
            android:id="@+id/view_read_history_button"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_baseline_history_24"
            android:text="@string/view_read_history"
            android:textSize="12sp" />

        <Button
            android:id="@+id/set_reminder_vb"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_baseline_notifications_active_24"
            android:padding="5sp"
            android:text="Set Reminder"
            android:textSize="12sp" />


        <Button
            android:id="@+id/home__vb"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_baseline_home_24"

            android:text="Home"
            android:textSize="12sp" />

        <Button
            android:id="@+id/view_library_vb"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_baseline_library_books_24"

            android:text="View Library"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="0dp"
        android:layout_height="66dp"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/editBook"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/edit_button" />

        <Button
            android:id="@+id/addToLibraryVBD"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/remove_button"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="96dp"
        android:layout_height="197dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:gravity="center_vertical"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/bookPicture"
        app:layout_constraintTop_toTopOf="@+id/bookPicture">

        <Button
            android:id="@+id/viewNotesVB"
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:text="View Notes" />

        <Button
            android:id="@+id/addNoteVB"
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:text="Add Note" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>